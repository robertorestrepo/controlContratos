{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        
        <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Crear Usuario</h2>
        {{ form_start(form) }}
          <div class="form-group">
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre) }}
          </div>
          
          <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
          </div>
          
          <div class="form-group">
            {{ form_label(form.fechaInicio) }}
            {{ form_widget(form.fechaInicio) }}
          </div>
          
          <div class="form-group">
            {{ form_label(form.fechaFin) }}
            {{ form_widget(form.fechaFin) }}
          </div>
          
          <div class="form-group">
            {{ form_label(form.categoria) }}
            {{ form_widget(form.categoria) }}
          </div>
          
          
          <div class="form-group">
            {{ form_widget(form.save) }}
          </div>
          
        {{ form_end(form) }}
    </div>
{% endblock %}
